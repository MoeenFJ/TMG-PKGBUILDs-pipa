    add_file "/usr/lib/firmware/qcom/sm8250/xiaomi/pipa/adspua.jsn"
    add_file "/usr/lib/firmware/qcom/sm8250/xiaomi/pipa/cdspr.jsn"
    add_file "/usr/lib/firmware/qcom/sm8250/xiaomi/pipa/slpir.jsn"
    add_file "/usr/lib/firmware/qcom/sm8250/xiaomi/pipa/venus.mbn"
    
    # QCA (Bluetooth/Ethernet)
    add_dir "/usr/lib/firmware/qca"
    
    # ath11k (Wi-Fi)
