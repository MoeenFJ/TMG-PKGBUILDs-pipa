    add_file "/usr/lib/firmware/qca/hmtnv20.b10f"
    add_file "/usr/lib/firmware/qca/nvm_usb_00130200.bin"
    add_file "/usr/lib/firmware/qca/apbtfw10.tlv"
    add_file "/usr/lib/firmware/qca/rampatch_00440302.bin"
    add_file "/usr/lib/firmware/qca/hpnv21g.b8c"
    add_file "/usr/lib/firmware/qca/hpnv21g.baa"
    add_file "/usr/lib/firmware/qca/nvm_usb_00000300.bin"
    add_file "/usr/lib/firmware/qca/nvm_00440302_eu.bin"
    add_file "/usr/lib/firmware/qca/crnv32.bin"
