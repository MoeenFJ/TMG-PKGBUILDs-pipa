#!/bin/bash

build() {
    # Dodaj całą strukturę katalogów firmware
    add_dir "/usr/lib/firmware"
    
    # Qualcomm SM8250 (Xiaomi Pad 6)
    add_file "/usr/lib/firmware/qcom/a650_sqe.fw"
    add_file "/usr/lib/firmware/qcom/a650_gmu.bin"
    add_dir "/usr/lib/firmware/qcom/sm8250/xiaomi/pipa"

    add_file "/usr/lib/firmware/qcom/sm8250/xiaomi/pipa/a650_zap.mbn"
